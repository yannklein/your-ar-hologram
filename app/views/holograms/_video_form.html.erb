<%= simple_form_for @hologram, html: {class: 'new-form-content'} do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, label: 'Choose a great title:', required: true %>
  <%= f.input :description, label: 'Take a breath and go for a cool description:', as: :text, :input_html => {:style => 'width: 100%', :rows => 5 }, required: true  %>
  <%= f.input :video, label: 'Now upload your video 😎👇', required: true, hint: "Take your video with a homogeneous background. Green background's best! 💚", input_html: { accept: 'video/*'}  %>
  <%= f.button :submit, value: 'Brew your hologram', class: 'btn btn-primary' %>
<% end %>

<p><em>Ehm.. disclaimer 👉 The video loading takes a while... please be patient, we're working on it!</em></p>
